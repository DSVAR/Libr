@page
@model Libr.Pages.Shared.books.DetailOfBookModel
@{
    ViewData["Title"] = "Details";
    var photoPath = $"/images/{Model.Book.PhotoPath}";
}


<div class="row justify-content-center m-5">
    <div class="col col-lg-8 col-sm-3">
        <div class="card">
            <div class="card-header text-center">
                <img  class="card-img-top border border-primary" src="@photoPath" />
            </div>

            <div class="card-body">
                <div class="text-left">
                    <h5 style="color:blueviolet">Название книги:@Model.Book.Name </h5>
                    <h5  style="color:brown">Автор:@Model.Book.Author</h5>
                    <h5 style="color:greenyellow">Жанр:@Model.Book.genres</h5>
                </div>
            </div>

            <div class="border border-dark"  >
                
                    <input value="@Model.Book.description" />
                
            </div>
            
            <div>
                <input  asp-for="photo"  class="custom-file-input form-control" />
                <label class="custom-file-label text-left"></label>
            </div>

            <div class="row">
                <div class="col">
                    <div class="card-footer text-center">
                        <a asp-page="/Shared/books/ViewBooks" class="btn btn-dark">Назад</a>
                        <button type="submit">Обновить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
@Scripts.Render("/js/UpLoad.js");
}