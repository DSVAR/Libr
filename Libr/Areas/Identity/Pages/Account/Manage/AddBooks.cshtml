@page
@model AddBooksModel
@{
    ViewData["Title"] = "Добавление книг";
    ViewData["ActivePage"] = ManageNavPages.AddBooks;
}

<h4>@ViewData["Title"]</h4>
<form method="post">
    <div class="row">
        <div class="col-md-6">

            <ul>
                <li>
                    <label>Автор:</label>
                    <input asp-for="books.Author"/>
                </li>
                <li>
                    <label>Название книги:</label>
                    <input asp-for="books.Name"/>
                </li>
                <li>
                    <label>Описание:</label>
                    <input asp-for="books.description"/>
                </li>
                <li>
                    <label>Количество:@Model.Dest</label>
                    <input />
                </li>
                <li>
                    <label>Жанр</label>
                    <select asp-for="books.genres" asp-items="Html.GetEnumSelectList<Models_book.Genre>()">
                        <option value="загрузить фото"/>
                    </select>

                </li>

            </ul>
            <div>
                <div class="custom-file ">
                    <input class="custom-file-input form-control" asp-for="photo"/>
                    <label class="custom-file-label text-left ">Фото книги</label>
                </div>
            </div>
            
            <button id="btn1" onclick="OnClicks" runat="server" type="submit">Save</button>

     
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
     }

</form>
