@page
@model AddBooksModel
@{
    ViewData["Title"] = "Добавление книг";
    ViewData["ActivePage"] = ManageNavPages.AddBooks;
}

<h4>@ViewData["Title"]</h4>
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">

            <ul class="list-group-item list-unstyled" >
                <li>
                    <span>
                        Автор:
                        <input asp-for="books.Author" />
                    </span>
                </li>
                <li>
                    <span>
                        Название книги:
                        <input asp-for="books.Name" />
                    </span>
                </li>
                <li>
                    <span>Описание:</span>
                    <input asp-for="books.description" />
                </li>
                <li>
                    <span>
                        Количество:
                        <input asp-for="books.count" min="1" value="1" />
                    </span>
                </li>
                <li>
                    <span>
                        Цена:

                        <input asp-for="books.price" min="1" value="1" />
                    </span>
                </li>
                <li>
                    <span>
                        Жанр
                        <select asp-for="books.genres" asp-items="Html.GetEnumSelectList<Libr.Models.Genre>()">
                            <option>Выберите жанр</option>
                        </select>
                    </span>
                </li>


            </ul>
            
            <div>
                <div class="custom-file ">
                    <input asp-for="photo" class="custom-file-input form-control" />
                    <label class="custom-file-label text-left ">Фото книги</label>
                </div>
            </div>
            <button type="submit">Save</button>


        </div>
    </div>


</form>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
     }