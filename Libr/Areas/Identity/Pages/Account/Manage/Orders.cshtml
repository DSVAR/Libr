@page
@model Libr.Areas.Identity.Pages.Account.Manage.OrdersModel
@{
}
<form method="post">
    <div class=" container-fluid">
        <div class="border row">
            <div class="border col-md-2">
                <p>Логин</p>
            </div>
            <div class="border col-md-3">
                <p>Книга</p>
            </div>
            <div class="border col-md-3">
                <p>Автор</p>
            </div>
            <div class="border col-md-1">
                <p>Кол.</p>
            </div>
            <div class="border col-md-1">
                <p>Цена</p>
            </div>
            <div class=" border col-md-2">
                <p>Действие</p>
            </div>
            @foreach (var item in Model.Cast)
            {
                <div class="border col-md-2">
                    <p>@item.login</p>
                </div>
                <div class="border col-md-3">
                    <p>@item.NameBook</p>
                </div>
                <div class="border col-md-3">
                    <p>@item.Author</p>
                </div>
                <div class="text-center border col-md-1">
                    <p>@item.count</p>
                </div>
                <div class="text-center border col-md-1">
                    <p>@item.FullPrice</p>
                </div>
                <div class=" border col-md-2">
                    @if (item.status == 0)
                    {
                        <button asp-route-Id="@item.ID" asp-page-handler="Accepting" class="btn btn-success">принять</button>}
                    @if (item.status == Libr.Data.Models.Status.Libraly)
                    {
                        <button asp-route-Id="@item.ID" asp-page-handler="Issued" class="btn btn-warning">выдать</button>}

                    @if (item.status==Libr.Data.Models.Status.выдан) {
                        <p style="background-color:darkblue; color:white; ">Была выдана </p>
                    }
                </div>

            }
        </div>
    </div>
</form>