@page
@model Libr.Areas.Identity.Pages.Account.Manage.AdminChange_passwordModel
@{
}

<form method="post">

    <div class="border-dark container-fluid" >
        <div class=" border row">
            <div class="border col-md-4">
                login
            </div>
            <div class="border col-md-3">
                новый пароль
            </div>
            <div class="border col-md-3">
               <p>Сменит пароль</p>
            </div>
            <div class="border col-md-2">
                <p>удалить</p>
            </div>
        </div>
    </div>
    @foreach (var item in Model.users)
    {
        <div class="border container-fluid">
            <div class="row">
                <div class="border col-md-4">
                    @item.Email
                </div>
                <div class="border col-md-3">
                    <input class="InputInherit"  name="@item.Email" />
                </div>
                <div class="text-center border col-md-3">
                    <button asp-route-Id="@item.Id" asp-page-handler="ChangePassword" class="btn btn-primary">Сменить</button>
                </div>
                <div class="text-center border col-md-2">
                    <button asp-route-Id="@item.Id" asp-page-handler="DeleteUs" class="btn btn-danger">Удалить</button>
                </div>
            </div>
        </div>
    }
</form>